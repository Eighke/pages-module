<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::admin.choose_page_type') }}</h4>
</div>

<div class="modal-body">
    <ul class="nav nav-stacked">
        {% for type in types %}
            <li>
                <a href="{{ url_to('admin/pages/create?page_type=' ~ type.id) }}">
                    <strong>{{ type.name }}</strong>
                    <br>
                    <small>{{ type.description }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
